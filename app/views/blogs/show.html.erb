<p id="notice"><%= notice %></p>
<div class="container">
    <%= link_to 'Back', blogs_path, class: 'btn btn-dark my-4' %>
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="<%= @blog.image %>" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= @blog.title%></h5>
      <p class="card-text"><%= @blog.body %></p>
      <p class="card-text"><%= @blog.user_id %></p>
    </div>
    <div class="card-footer">
      <% if @blog.user.id == @blog.user_id %>
        <%= link_to 'Edit', edit_blog_path(@blog) %>
        <%= link_to 'Delete', @blog, method: :delete, data:{confirm:'Are you Sure?'} %>
      <% else %>
        <p>What u looking at punk?</p>

      <% end %>
    </div>
  </div>
</div>
